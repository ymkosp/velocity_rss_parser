<% provide(:title, "New Rss Feed") %>


<%= render 'layouts/header' %>
<div class='row'>
  <h1>Add Rss Feed Urls</h1>
  <div class='span6 offset3'>

    <%= form_for(:feed, url: feeds_path) do |f| %>
      <%#= f.label :feed_url %>
      <%= f.text_field :feed_url, placeholder: "Feed Url" %>&nbsp;&nbsp;

      <%= f.submit "Add", class: 'btn btn-primary'%>

    <% end %>
    <%#= render :index %>
</div>
</div>

    <br />

<div class='row'>
  <h1>All Feed Urls</h1>
  <div class='span6 offset3'>

<%#= will_paginate %>

<ol class="feeds">
    <%#= render @feeds %>
    <% @feeds.each do |f| %>
      <li>
          <%= link_to f.feed_url, '#' , {"onmouseover" => "Parse this feed", "onmouseout" => "Read this feed"}%>
          <%= link_to "Edit", edit_feed_path(f) %>&nbsp;&nbsp;
          <%= link_to "delete", f, method: :delete, data: { confirm: "You sure?" } %>
          <br />
          </li>
    <% end %>
  </ol>
    <%= link_to "All Feeds ", feeds_path %> &nbsp;&nbsp;
    <%= link_to "Home", root_path %>
  </div>
</div>
